{
  "variables": {
    "atlas_username":           "",
    "atlas_token":              "",

    "home":                     "{{env `HOME`}}",

    "instance_name":            "mm-devpaas-nginx-rhel-7.3-v{{isotime \"20060102-0101\"}}",
    "image_name":               "mm-devpaas-nginx-rhel-7.3-v{{isotime \"20060102-0101\"}}",
    "image_description":        "MM DevPaas NGINX RHEL 7.3 VM Image",
    "image_version":            "0.1",

    "aws_ssh_username":         "",
    "aws_ssh_keypair_name":     "",
    "aws_ssh_private_key_file": "",

    "aws_region":               "",
    "aws_vpc_id":               "",
    "aws_subnet_id":            "",
    "aws_source_image":         "",
    "aws_instance_type":        "",
    "aws_security_groups":      "",

    "gcp_account_file":         "",
    "gcp_project_id":           "",
    "gcp_project_name":         "",
    "gcp_zone":                 "",
    "gcp_ssh_username":         "",
    "gcp_source_image":         "",

    "vbox_ssh_username":          "",
    "vbox_ssh_password":          ""
  },
  "builders": [
    {
      "type":                     "amazon-ebs",

      "ami_virtualization_type":  "hvm",
      "ami_name":                 "{{ user `image_name`         }}",
      "ami_description":          "{{ user `image_description`  }} AMI",

      "ssh_pty":                  "true",
      "ssh_username":             "{{ user `aws_ssh_username`         }}",
      "ssh_keypair_name":         "{{ user `aws_ssh_keypair_name`     }}",
      "ssh_private_key_file":     "{{ user `aws_ssh_private_key_file` }}",

      "region":                   "{{ user `aws_region` }}",
      "vpc_id":                   "{{ user `aws_vpc_id` }}",
      "subnet_id":                "{{ user `aws_subnet_id` }}",
      "source_ami":               "{{ user `aws_source_image` }}",
      "instance_type":            "{{ user `aws_instance_type` }}",
      "security_group_id":        "{{ user `aws_security_groups` }}",

      "run_tags":         { "ami-create": "{{ user `image_name`}}" },
      "tags":             { "ami": "{{ user `image_name`}}"},

      "associate_public_ip_address": true

    },
    {
      "type":                     "googlecompute",

      "image_name":               "{{ user `image_name` }}",
      "image_description":        "{{ user `image_description` }}",

      "account_file":             "{{ user `gcp_account_file` }}",
      "project_id":               "{{ user `gcp_project_id` }}",

      "zone":                     "{{ user `gcp_zone` }}",
      "source_image":             "{{ user `gcp_source_image` }}",
      "instance_name":            "{{ user `instance_name` }}",

      "ssh_username":             "{{ user `gcp_ssh_username` }}",

      "communicator":             "ssh"
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type":      "RedHat_64",
      "format":             "ova",
      "headless":           true,
      "http_directory":     "http",

      "disk_size":          81920,

      "ssh_username":       "{{ user `vbox_ssh_username` }}",
      "ssh_password":       "{{ user `vbox_ssh_password` }}",
      "ssh_wait_timeout":   "10000s",
      "ssh_pty" :           true,

      "iso_checksum_type":  "sha256",
      "iso_checksum":       "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
      "iso_urls": [
        "CentOS-7-x86_64-Minimal-1511.iso",
        "http://mirror.switch.ch/ftp/mirror/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso"
      ],

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],

      "shutdown_command":   "echo 'packer'|sudo -S /sbin/halt -h -p",
      "virtualbox_version_file":  ".vbox_version",
      "guest_additions_path":     "VBoxGuestAdditions_{{.Version}}.iso",
      "vm_name":                  "{{user `instance_name`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "3072" ],
        [ "modifyvm", "{{.Name}}", "--cpus"  ,    "2" ],
        [ "modifyvm", "{{.Name}}", "--vram"  ,   "32" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/virtualbox/virtualbox-centos.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": ["virtualbox-iso"]
    },
    {
      "type":   "shell",
      "scripts": [
        "scripts/serverspec/create-serverspec-temp-dirs.sh",
        "scripts/nginx/create-nginx-temp-dirs.sh"
      ]
    },
    {
      "type":         "file",
      "source":       "resources/serverspec/configs/",
      "destination":  "/tmp/serverspec/"
    },
    {
      "type":         "file",
      "source":       "resources/nginx/configs/",
      "destination":  "/tmp/nginx/configs/"
    },
    {
      "type":         "file",
      "source":       "resources/nginx/tests/",
      "destination":  "/tmp/nginx/tests/"
    },
    {
      "type": "shell",
      "script": "scripts/nginx/nginx-centos.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/serverspec/serverspec-core-centos7.sh",
        "scripts/serverspec/serverspec-nginx.sh",
        "scripts/serverspec/serverspec-launch-test.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type":   "compress",
      "output": "build/{{user `image_name`}}.tar.gz",
      "only":   ["virtualbox-iso"]
    },
    {
      "type":   "vagrant",
      "output": "build/{{.Provider}}-{{ user `image_name` }}.box",
      "only":   ["virtualbox-iso"]
    },
    {
      "type":           "atlas",
      "artifact":       "marcomaccio/{{ user `image_name` }}",
      "artifact_type":  "vagrant.box",
      "metadata": {
          "provider":   "virtualbox"
      },
      "only":           ["virtualbox-iso"]
    }
  ]
}
